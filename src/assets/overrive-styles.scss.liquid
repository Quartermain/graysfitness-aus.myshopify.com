$c-blue: #2e55a5;
$c-black: #000;
$c-white: #fff;
$c-gray: #f7f7f7;

.block-text {
  @media (min-width: 960px) {
    display: flex;
  }

  .eight.columns {
    background: $c-gray;
  }

  .txt-header {
    background: $c-blue;
    color: $c-white;
    padding: 20px;
    font-size: 17px;
    text-transform: uppercase;
    border-bottom: solid 10px $c-black;
    margin-bottom: 20px;
    @media (min-width: 960px) {
      font-size: 26px;
    }
  }
  
  .item-block {
    margin-bottom: 30px;
    padding: 20px;
    
    .col-img {
      width: 20%;
      float: left;
      text-align: center;
      vertical-align: top;

      img {
        max-width: 100%;
      }
    }

    .col-content {
      width: 75%;
      float: left;
      margin-left: 5%;
    }
  }
}

.caption {
  .search_form {
    width: 70%;
    margin: 0 auto;

    input {
      background-color: $c-white;
      border-color: $c-black;
    }

    .search-submit {
      background: $c-black;
      color: $c-white;
      height: 100%;
      top: 0;
      right: 0;
      padding: 10px 8px;
    }
  }
}